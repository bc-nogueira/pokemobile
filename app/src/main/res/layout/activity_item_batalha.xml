<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/activity_bg"/>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_item_batalha"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.breno.pokemobile.ItemBatalhaActivity">

    <TextView
        android:id="@+id/mochilaTextViewItemBatalha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Mochila"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#fff"/>

    <ListView
        android:id="@+id/itensListViewItemBatalha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mochilaTextViewItemBatalha"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:dividerHeight="10dp"/>

</RelativeLayout>
</FrameLayout>