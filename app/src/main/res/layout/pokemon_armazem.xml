<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff">

    <ImageView
        android:id="@+id/iconeImageViewPokemonArmazem"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/bulbasaur"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/nomeTextViewPokemonArmazem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bulbasaur"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_below="@+id/iconeImageViewPokemonArmazem"/>

    <TextView
        android:id="@+id/lvlTextViewPokemonArmazem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lv. 1"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_below="@+id/nomeTextViewPokemonArmazem"/>

</RelativeLayout>
