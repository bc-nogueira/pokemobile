<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.breno.pokemobile.InfoActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/treinador1"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Nome: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nome"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <TextView
        android:text="Pokemons: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pokemons"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_below="@+id/nome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/valorNome"
        android:textSize="18sp"
        android:layout_above="@+id/pokemons"
        android:layout_toRightOf="@+id/pokemons"
        android:layout_toEndOf="@+id/pokemons"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/valorPokemons"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/pokemons"
        android:layout_alignBottom="@+id/pokemons"
        android:layout_alignLeft="@+id/valorNome"
        android:layout_alignStart="@+id/valorNome" />

    <TextView
        android:text="Dinheiro: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dinheiro"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/valorDinheiro"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/valorPokemons"
        android:layout_alignStart="@+id/valorPokemons" />
</RelativeLayout>
